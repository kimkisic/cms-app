<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical">

    <com.choistec.cms.scannerReg.ScalableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1920"
        sl:scale_base_width="1080">

        <!--프로그레스 상태 보여주는 텍스트뷰-->
        <TextView
            android:id="@+id/textViewSendState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="#F2F2F2"
            android:text="@string/input_progress_ip_input_0_percent"
            android:textColor="#7F7F7F"
            android:autoLink="web"
            sl:scale_height="545"
            sl:scale_left="95"
            sl:scale_textsize="45"
            sl:scale_top="685"
            sl:scale_width="900" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#008FD9"
            sl:scale_top="855"
            sl:scale_left="150"
            sl:scale_width="100"
            sl:scale_height="100"
            sl:scale_textsize="50"
            />

        <!--프로그레스 창 닫기 버튼-->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_blue_btn_background"
            android:text="@string/re_connection"
            android:textColor="#fff"
            android:visibility="invisible"
            sl:scale_height="80"
            android:textStyle="bold"
            sl:scale_left="560"
            sl:scale_textsize="38"
            sl:scale_top="1135"
            sl:scale_width="260" />

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_blue_btn_background"
            android:text="OK"
            android:textColor="#fff"
            android:visibility="invisible"
            sl:scale_height="80"
            android:textStyle="bold"
            sl:scale_left="260"
            sl:scale_textsize="38"
            sl:scale_top="1135"
            sl:scale_width="260" />

        <Button
            android:id="@+id/btn_cms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_blue_btn_background"
            android:text="OK"
            android:textColor="#fff"
            android:visibility="invisible"
            sl:scale_height="80"
            android:textStyle="bold"
            sl:scale_left="260"
            sl:scale_textsize="38"
            sl:scale_top="1135"
            sl:scale_width="260" />

    </com.choistec.cms.scannerReg.ScalableLayout>


</LinearLayout>