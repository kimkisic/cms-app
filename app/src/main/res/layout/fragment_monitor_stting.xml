<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_testing"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/qr_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="QR Code"/>
        <EditText
            android:id="@+id/qr_edit_txt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/qr_code_txt"
            android:layout_toLeftOf="@+id/qr_btn"
            android:layout_alignBottom="@+id/qr_code_txt"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/qr_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/qr_code_txt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/qr_edit_txt"
            android:background="#F3ad" />
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/aa"
            android:layout_below="@+id/qr_code_txt"
            android:layout_alignStart="@+id/qr_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radio_group"
            android:text="Unit"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/qr_edit_txt"
            android:layout_alignStart="@+id/qr_edit_txt"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btn_c"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/rad_left"
                android:text="C"
                android:checked="true" />
            <RadioButton
                android:text="F"
                android:id="@+id/btn_f"
                android:background="@drawable/rad_right"
                android:layout_width="90dp"
                android:layout_height="50dp"/>
        </RadioGroup>
    </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/temp_aram_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Temp Alarm"/>
            <com.choistec.cms.scannerReg.unit.SwitchButton
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                app:sb_show_indicator="false"
                app:sb_background="#0FFF"
                android:id="@+id/sw_hi_snd" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:id="@+id/option_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:text="Low"
                    android:layout_marginLeft="220dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="High"
                    android:layout_marginLeft="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Temp Range"/>
                    <NumberPicker
                        android:id="@+id/low_tmp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:hint="low"/>
                    <NumberPicker
                        android:id="@+id/high_tmp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_width="70dp"
                        android:hint="high"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:text="* Temp range can be from -30 to 70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* Temp can be set to 0.5 units."/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Alarm Interval" />

                <EditText
                    android:id="@+id/interval_edt"
                    android:inputType="number"
                    android:layout_marginLeft="60dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="interval" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:text="OK"
            android:id="@+id/ok_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>